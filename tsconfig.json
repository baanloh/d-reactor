{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "stripInternal": true
    },
    "exclude": ["node_modules", "dist", "test"]
}
